@model IEnumerable<TConsultigSA.Models.TipoNomina>

<div class="container">
    <h2 class="text-md-center mt-5">Lista de Tipos de Nómina</h2>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tipo in Model)
                    {
                        <tr>
                            <td>@tipo.Descripcion</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@tipo.Id" class="btn btn-warning">Editar</a>
                                <form asp-action="Delete" asp-route-id="@tipo.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este tipo de nómina?');">
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-12 text-left">
                    <a asp-action="Create" class="btn btn-primary mt-3">Crear Nuevo Tipo</a>
                </div>
            </div>

        </div>
    </div>

    
</div>