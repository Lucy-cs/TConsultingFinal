@model TConsultigSA.Models.HorasTrabajo

<div class="container">
    <h2 class="text-center mt-5 mb-5">Eliminar Registro de Horas</h2>

    <div class="row mt-4 justify-content-center">
        <div class="col-md-6">
            <h4>Horas Trabajadas para @Model.Empleado.Nombre</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Fecha</dt>
                <dd class="col-sm-10">@Model.Fecha.ToString("MM/yyyy")</dd>

                <dt class="col-sm-2">Total Horas</dt>
                <dd class="col-sm-10">@Model.TotalHoras</dd>

                <dt class="col-sm-2">Aprobado</dt>
                <dd class="col-sm-10">@(Model.Aprobado ? "Sí" : "No")</dd>
            </dl>

            <form asp-action="Delete" method="post" onsubmit="return confirm('¿Estás seguro de eliminar las horas de este trabajador?');">
                <input type="hidden" asp-for="Id" />
                <div class="text-left mt-4">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
