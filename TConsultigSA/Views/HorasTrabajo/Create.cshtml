@model TConsultigSA.Models.HorasTrabajo


        <div class="container">
            <h2 class="text-center mt-5 mb-5">Registrar Horas Trabajadas Mensuales</h2>

            <form asp-action="Create" method="post">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="IdEmpleado">Empleado</label>
                            <select asp-for="IdEmpleado" class="form-control" asp-items="ViewBag.Empleados"></select>
                            <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Fecha">Mes y Año</label>
                            <input asp-for="Fecha" class="form-control" type="month" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="TotalHoras">Horas Trabajadas</label>
                            <input asp-for="TotalHoras" class="form-control" />
                            <span asp-validation-for="TotalHoras" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Observaciones">Observaciones</label>
                            <textarea asp-for="Observaciones" class="form-control"></textarea>
                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <input asp-for="Aprobado" class="form-check-input" />
                            <label asp-for="Aprobado" class="form-check-label">Aprobado</label>
                        </div>

                        <div class="text-left mt-4">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

