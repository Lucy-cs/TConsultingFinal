@model TConsultigSA.Models.Empleado

<div class="container">
    <h2 class="text-center mt-5 mb-3">Editar Empleado</h2>

    <form asp-action="Edit" method="post">
        <input asp-for="Id" type="hidden" />

        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="form-group">
                    <label for="DPI">DPI</label>
                    <input asp-for="DPI" class="form-control" maxlength="13" />
                    <span asp-validation-for="DPI" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="FechaContratado">Fecha de Contratación</label>
                    <input asp-for="FechaContratado" class="form-control" type="date" />
                    <span asp-validation-for="FechaContratado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdPuesto">Puesto</label>
                    <select asp-for="IdPuesto" class="form-control" asp-items="@ViewBag.Puestos"></select>
                    <span asp-validation-for="IdPuesto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdDepartamento">Departamento</label>
                    <select asp-for="IdDepartamento" class="form-control" asp-items="@ViewBag.Departamentos"></select>
                    <span asp-validation-for="IdDepartamento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Email">Correo Electrónico</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Telefono">Número de Teléfono</label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Direccion">Dirección</label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Salario">Salario</label>
                    <input asp-for="Salario" class="form-control" />
                    <span asp-validation-for="Salario" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

            </div>

        </div>
        
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
