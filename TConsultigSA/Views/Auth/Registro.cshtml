@model Usuario
@{
    ViewData["Title"] = "Registro";
}

<!-- Imagen de fondo que cubre toda la página -->
<div style="background-image: url('@Url.Content("~/images/edificioA.jpg")'); background-size: cover; background-position: center; height: 100vh; display: flex; justify-content: center; align-items: center;">

    <!-- Cuadro de registro con fondo azul marino -->
    <div class="card" style="background-color: #001f3f; color: white; padding: 30px; width: 400px; box-shadow: 0px 0px 20px rgba(0,0,0,0.2);">
        <h2 class="text-center">Registro</h2>

        <form asp-action="Registro" method="post">
            <div class="form-group">
                <label for="nombre">Nombre de Usuario</label>
                <input type="text" name="nombre" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="contrasenia">Contraseña</label>
                <input type="password" name="contrasenia" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Registrarme</button>
        </form>

        <!-- Botón de volver -->
        <div class="mt-3 text-center">
            <a asp-action="Welcome" asp-controller="Home" class="btn btn-secondary btn-block">Volver al inicio</a>
        </div>

    </div>

</div>
