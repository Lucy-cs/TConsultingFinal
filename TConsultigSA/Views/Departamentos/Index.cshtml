@model IEnumerable<TConsultigSA.Models.DepartamentoViewModel>

<div class="container">
    <h2 class="text-md-center mt-5">Lista de Departamentos</h2>

    <!-- Mensaje de error con botón de cierre -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
    }


    <div class="row mt-4 justify-content-center">
        <div class="col-md-10">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre del Departamento</th>
                        <th>Líder</th>
                        <th>Empresa</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DepartamentoNombre</td>
                            <td>@item.LiderNombre</td>
                            <td>@item.EmpresaNombre</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Editar
                                </a>

                                <!-- Cambiado a asp-action="Delete" para usar el ActionName en el controlador -->
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Estás seguro de eliminar este departamento?');">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-12 text-left">
                    <a asp-action="Create" class="btn btn-success mt-3">
                        <i class="fas fa-plus"></i> Agregar Departamento
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
